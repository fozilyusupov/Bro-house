<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>KPI</title>
</head>
<body class="bg-light">

<div class="container">
    <form method="post" action="/hhh" style="width: 500px; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%)">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <button class="btn btn-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-90deg-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1.146 4.854a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H12.5A2.5 2.5 0 0 1 15 6.5v8a.5.5 0 0 1-1 0v-8A1.5 1.5 0 0 0 12.5 5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4z"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Выберите барбера</label>
                    <select name="name"  class="form-control" id="exampleInputEmail1" required>
                        {{#barber}}
                            <option >{{login}}</option>
                        {{/barber}}
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleInputData" class="form-label">Выберите Дату</label>
                    <input type="date" name="date" class="form-control" id="exampleInputData" required>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleInputSumm" class="form-label">Запишите сумму</label>
                    <input type="number" name="narxi" class="form-control" id="exampleInputSumm" aria-describedby="emailHelp" required>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="exampleInputCom" class="form-label">Комментария</label>
                    <textarea name="zadacha" class="form-control" id="exampleInputCom" required></textarea>
                </div>
            </div>
        </div>
        <button type="reset" class="btn btn-danger">Очистить</button>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit" class="btn btn-primary" style="float: right;">Отправить</button>
    </form>
</div>

<script src="/static/util_kpi/bootstrap.min.css"></script>
